
<h1> Listing Answers to the question</h1>
<dl>
  <dt>ID</dt>
    <dd><%=@question.id %></dd>
  <dt>TITLE</dt>
    <dd><%=@question.title%></dd><br>
  <dt>CONTENT</dt>
    <dd><%=@question.content%></dd><br>
</dl>
<h2>ANSWERS</h2>
<table>
  <tr>
    <th>ID</th><td></td>
    <th>TITLE</th><td></td>
    <th>CONTENT</th><td></td>
    <th>VOTE COUNT</th><td></td>
    <th> UP VOTE</th><td></td>
    <th> VOTES TOTAL </th><td></td>
  </tr>

  <% @question.answers.each do |answer| %>
    <tr>
      <td><%= answer.id %></td><td></td>
      <td><%= answer.title %></td><td></td>
      <td><%= answer.content %></td><td></td>
      <td><%= answer.votes%></td><td></td>
      <td><%=link_to 'LIKE', "/questions/#{answer.question_id}/answers/upvote/#{answer.id}" %></td><td></td>
      <td><%= link_to 'UNLIKE',"/questions/#{answer.question_id}/answers/downvote/#{answer.id}" %></td>
    </tr>
  <% end %>
</table>

<h1> New Answer </h1>
<%= form_for([@question, @question.answers.build]) do |f|%>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Destroy', question_path(@question.id), method: :delete, data: {confirm: 'Are you sure?'} %>









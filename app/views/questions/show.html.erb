<h2>ANSWERS</h2>
<table>
  <tr>
    <th>ID</th>
    <th>TITLE</th>
    <th>CONTENT</th>
    <th>VOTE COUNT</th>
    <th> UP VOTE</th>
    <th> VOTES TOTAL </th>
  </tr>

  <% @question.answers.each do |answer| %>
    <tr>
      <td><%= answer.id %></td>
      <td><%= answer.title %></td>
      <td><%= answer.content %></td>
      <td><%= answer.votes%></td>
      <td><%=link_to 'Upvote', "/questions/#{answer.question_id}/answers/upvote/#{answer.id}" %></td>
      <td><%= link_to 'Downvote',"/questions/#{answer.question_id}/answers/downvote/#{answer.id}" %></td>
    </tr>
  <% end %>
</table>

<h1> New Answer </h1>
<%= form_for([@question, @question.answers.build]) do |f|%>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Destroy', question_path(@question.id), method: :delete, data: {confirm: 'Are you sure?'} %>








